<script>

function deleteCat(catId){
$.ajax({
url:'/admin/delete-category/'+catId,
method:'get',
success:(response)=>{
  if(response.category){
     swal("OOPS !", "You cannot delete category", "error").then(()=>{

   location.reload()
     })

  }else {
    swal("Good job!", "Your category has been deleted!", "success").then(()=>{

    location.reload()
    })
  }

}
})
}


</script>
