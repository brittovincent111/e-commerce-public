                  <tr>
                    <th>Category Name</th>
                    <th>Image</th>
                    <th>Edit</th>
                    <th>Delete</th>

                  </tr>
                </thead>
                <tbody>
                  {{#each data}}

                  <tr>

                    <td>{{this.category}}</td>
                    <td><img src="/image/{{this.image.[0]}}" style="height: 40px" alt=""></td>

                    <td><a href="/admin/edit-category/{{this._id}}" class="btn btn-info" role="button">Edit</a></td>
                    {{!-- <td><a href="/admin/delete_category/{{this._id}}" onclick="deleteCat('{{this._id}}')"
                        class="btn btn-danger">Delete</a></td> --}}
                    <td><a onclick="deleteCat('{{this._id}}')" class="btn btn-danger">Delete</a></td>
                  </tr>
                  {{/each}}
                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
