<script>
  function deleteProdOff(proId) {
    console.log("call reached")
    $.ajax({
      url: '/admin/delete-product-offer/'+ proId,
      method: 'get',
      success: (response) => {
        
        swal("Product offer deleted!", "offer has been deleted!", "success").then(()=>{

          location.reload()
        
        }) 
      }
    })
  }
</script>
