<div class="my-account-wrapper pb-100 pt-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="#dashboad" class="active" data-bs-toggle="tab">Dashboard</a>
                                <a href="#orders" data-bs-toggle="tab">Orders</a>
                                <a href="#account-info" data-bs-toggle="tab">Account Edit</a>
                                <a href="#address-edit" data-bs-toggle="tab">Address Edit</a>
                                <a href="#update-password" data-bs-toggle="tab">Password Update</a>
                                <a href="#view-coupon" data-bs-toggle="tab">Coupons</a>

                                <a href="login-register.html">Logout</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->

                        <div class="col-lg-9 col-md-8">

                            <div class="tab-content" id="myaccountContent">

                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                    {{#if passErr}}
                                    <!-- My Account Tab Content Start -->
                                </div style="padding-bottom:10px">
                                <p style="color:red;">Your Confirm Password is wrong</p>
                            </div>
                            {{/if}}
                            <div class="myaccount-content">
                                <h3>Dashboard</h3>
                                <div class="welcome">
                                    <p>Hello, <span
                                            style="font-size: 20px ; color: rgb(255, 94, 0)">{{data.name}}</span></p>
                                </div>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">Name : <span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)">{{data.name}}</span></p>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">Phone : <span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)">{{data.phone}}</p>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">email : <span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)">{{data.email}}</p>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">Refferal: <span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)">{{data.referral}}</p>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">Wallet Amount : <span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)">{{data.wallet}}</p>
                                <p style="font-size: 15px ; color:rgb(94, 94, 94)">Status :<span
                                        style="font-size: 20px ; color:rgb(0, 0, 0)"> Active</p>
                            </div>
                        </div>
                        <!-- Single Tab Content End -->
                        <!-- Single Tab Content Start -->
                        <div class="tab-pane fade" id="orders" role="tabpanel">
                            <div class="myaccount-content">
                                <h3>Orders</h3>
                                <div class="myaccount-table table-responsive text-center">
                                    <table class="table table-bordered">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Order Id</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Total</th>
                                                <th>paymentMethod</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each orders}}
                                            <tr>
                                                <td>{{this._id}}</td>
                                                <td class="text-truncate" style="max-width: 100px;"> {{this.date}}</td>
                                                <td>{{this.status}}</td>
                                                <td>{{this.totalAmount}}</td>
                                                <td>{{this.paymentMethod}}</td>
                                                <td><a href="/view-single-order/{{this._id}}"
                                                        class="check-btn sqr-btn ">View</a></td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>


                        <!-- Single Tab Content End -->
                        <!-- Single Tab Content Start -->
                        <div class="tab-pane fade" id="account-info" role="tabpanel">
                            <div class="myaccount-content">
                                <h3>Account Edit</h3>
                                <div class="account-details-form">
                                    <form action="/update-account" method="post">
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="single-input-item">
                                                    <label for="first-name" class="required">First Name</label>
                                                    <input type="text" id="first-name" name="name"
                                                        value="{{data.name}}" />
                                                </div>
                                            </div>

                                        </div>

                                        <div class="single-input-item">
                                            <label for="email" class="required">Email Addres</label>
                                            <input type="email" id="email" value="{{data.email}}" name="email" />
                                        </div>
                                        <div class="single-input-item">
                                            <label for="phone" class="required">Email Addres</label>
                                            <input type="number" id="email" value="{{data.phone}}" name="phone" />
                                        </div>


                                        <div class="single-input-item btn-hover">
                                            <button class="check-btn sqr-btn">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="address-edit" role="tabpanel">
                            <div class="myaccount-content">
                                <h3>Address</h3>
                                <div class="myaccount-table table-responsive text-center">
                                    <table class="table table-bordered">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Address</th>
                                                <th>Edit</th>
                                                <th>Delete</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each address}}
                                            <tr>
                                                <td><p>{{this.address.firstname}} {{this.address.lastname}} ,
                                                {{this.address.add1}} {{this.address.add2}}
                                                 {{this.address.city}} {{this.address.states}} ,
                                                  {{this.address.country}} {{this.address.pincode}}</p>
                                                </td>
                                                <td>

                                                <a href="/edit-address/{{this._id}}" type="button" class="btn btn-info">Edit</a>
                                                </td>

                                               
                                                 <td>

                                                <a type="button" href="/delete-address/{{this._id}}" class="btn btn-danger">Delete</a>
                                                </td>
                                               
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="update-password" role="tabpanel">
                            <div class="myaccount-content">
                                <h3>Password Update</h3>
                                <div class="account-details-form">
                                    <form action="/update-password" method="post">

                                        <div class="single-input-item">
                                            <label for="phone" class="required">Old Password</label>
                                            <input type="text" id="country" value="" name="oldPassword" />
                                        </div>
                                        <div class="single-input-item">
                                            <label for="phone" class="required">New Password</label>
                                            <input type="text" id="password" value="" name="password" />
                                        </div>
                                        <div class="single-input-item">
                                            <label for="phone" class="required">Confirm Password</label>
                                            <input type="text" id="password" value="" />
                                        </div>

                                        <div class="single-input-item btn-hover">
                                            <button class="check-btn sqr-btn">Save Changes</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Single Tab Content End -->
                        <div class="tab-pane fade" id="view-coupon" role="tabpanel">
                            <div class="myaccount-content">
                                <h3>Coupon </h3>
                                <div style="display: flex; flex-wrap: wrap;">
                                    {{#each couponDetails}}
                                    <div class="d-flex card text-center mx-4 my-4">
                                        <div class="image"><img src="https://i.imgur.com/DC94rZe.png" width="150">
                                        </div>
                                        <div class="image2"><img src="https://i.imgur.com/DC94rZe.png" width="150">
                                        </div>
                                        <h1>{{this.couponper}}% OFF</h1><span class="d-block">Minimun Amount
                                            {{this.Lprice}}</span><span class="d-block">Exp Date
                                            :{{this.enddate}}</span>
                                        <div class="mt-4"><span id="P1{{this._id}}">{{this.couponid}}</span></div>

                                        {{!-- <div class="single-input-item btn-hover">
                                            <button class="check-btn sqr-btn"
                                                onclick="copyToClipboard('#P1{{this._id}}'')">Save Changes</button>
                                        </div> --}}

                                    </div>
                                    {{/each}}





                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div> <!-- My Account Tab Content End -->
        </div>
    </div> <!-- My Account Page End -->
</div>
</div>
</div>
