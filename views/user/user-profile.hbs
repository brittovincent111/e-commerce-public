<script>
    function copyToClipboard(element, Id) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
        alertify.set('notifier', 'position', '');
        alertify.success('Coupon copied to clipboard! : ' + alertify.get('notifier', 'position'));

    }
</script>
