<div class="container">
<table class="table">
  <caption>List of users</caption>
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Date</th>
      <th scope="col">Order Id </th>
      <th scope="col">Amount</th>
      <th scope="col">Status</th>
      {{!-- <th scope="col">View Order</th> --}}
      <th scope="col">Cancel</th>
      
    </tr>
  </thead>
 
  <tbody>
     {{#each orders}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td class="text-truncate"style="max-width :140px;">{{this.date}}</td>
      <td>{{this._id}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.status}}</td>
      {{!-- <td><a href="/view_order_products/{{this._id}}" class="btn btn-dark">View Order</a></td> --}}
      <td><a href="/cancel_order/{{this._id}}" class="btn btn-dark">Cancel Order</a></td>
        <td><a href="/view-singleorder/{{this._id}}" class="btn btn-dark">View Order</a></td>

      
    </tr>
    {{/each}}

    
  </tbody>
</table>
</div>